pragma solidity ^0.8.0;

/*
 * Simple Bank Account Smart Contract
 * Operations:
 *   1. Deposit money
 *   2. Withdraw money
 *   3. Show balance
 */

contract BankAccount {
    mapping(address => uint256) private balances; // store each customer's balance

    // Event logs (helpful for blockchain explorers)
    event Deposit(address indexed customer, uint256 amount);
    event Withdraw(address indexed customer, uint256 amount);

    // Deposit money into account
    function deposit() public payable {
        require(msg.value > 0, "Deposit amount must be greater than zero");
        balances[msg.sender] += msg.value;
        emit Deposit(msg.sender, msg.value);
    }

    // Withdraw money from account
    function withdraw(uint256 amount) public {
        require(balances[msg.sender] >= amount, "Insufficient balance");
        payable(msg.sender).transfer(amount);
        balances[msg.sender] -= amount;
        emit Withdraw(msg.sender, amount);
    }

    // Show current balance of the caller
    function getBalance() public view returns (uint256) {
        return balances[msg.sender];
    }
}
