pragma solidity ^0.8.0;

contract StudentMarks {
    uint[] public marks;  // Dynamic array to store marks

    // Function to add marks to the array
    function addMark(uint _mark) public {
        marks.push(_mark);
    }

    // Function to get all marks in the array
    function getMarks() public view returns (uint[] memory) {
        return marks;
    }

    // Function to find the addition (sum) of marks in the array
    function getTotalMarks() public view returns (uint) {
        uint total = 0;
        for (uint i = 0; i < marks.length; i++) {
            total += marks[i];
        }
        return total;
    }
}
